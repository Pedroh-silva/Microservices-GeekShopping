@model GeekShopping.Web.Models.ProductModel
<link rel="stylesheet" href="~/css/ProductCreate.css" />
<h1>Criar novo produto</h1>
<hr />
<form asp-action="ProductCreate">
	@Html.AntiForgeryToken()
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-data">
		<div>
			<label asp-for="Name"></label>
			<input asp-for="Name" />
		</div>
		<div>
			<label asp-for="Price"></label>
			<input asp-for="Price" />
		</div>
		<div>
			<label asp-for="Description"></label>
			<textarea asp-for="Description"></textarea>
		</div>
		<div>
			<label asp-for="CategoryName"></label>
			<input asp-for="CategoryName" />
		</div>
		<div>
			<label asp-for="ImageURL"></label>
			<input asp-for="ImageURL" />
		</div>
	</div>
	<div class="actions">
		<a class="btn btn-primary" asp-action="ProductIndex">Back to list</a>
		<button class="btn btn-success" type="submit" value="Create">Create</button>
	</div>
</form>
@section Scripts{
	<partial name="_ValidationScriptsPartial"> 
}